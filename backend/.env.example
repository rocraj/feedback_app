# Feedback App - Environment Variables Example
# Copy this to .env and update with your actual values

# Core Settings
PROJECT_NAME=Feedback App Backend
API_V1_STR=/api/v1

# Security
SECRET_KEY=your_secure_secret_key_here

# Frontend URLs
FRONTEND_URL=https://feedback-mini.web.app
CORS_ORIGINS=["https://feedback-mini.web.app", "http://localhost:5173", "http://localhost:3000"]

# Database Configuration
# You can either set individual database parameters:
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=feedback_db
# Or use a full connection string (which will take precedence if set):
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Email Configuration
EMAIL_BACKEND=SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@yourdomain.com

# Magic Link Settings
MAGIC_LINK_EXPIRY_HOURS=24

# Google Cloud Settings (only needed for App Engine deployment)
# GAE_APPLICATION=true  # Will be set automatically by App Engine
# INSTANCE_CONNECTION_NAME=project:region:instance  # For Cloud SQL socket connection

# API Configuration
API_BASE_URL=https://your-app-url.appspot.com/api/v1