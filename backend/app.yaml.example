runtime: python311
entrypoint: gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app

handlers:
  # Handle all requests
  - url: /.*
    script: auto

env_variables:
  # These are placeholders. Real values will be set during deployment.
  CORS_ORIGINS: '["https://feedback-mini.web.app", "https://feedback-mini.web.app/*", "http://localhost:5173", "http://localhost:3000"]'
  FRONTEND_URL: https://feedback-mini.web.app
  EMAIL_BACKEND: SMTP
  
  # NOTE: The following values should be set in Google Cloud environment
  # variables and not committed to Git:
  # - DB_USER
  # - DB_PASSWORD
  # - DB_HOST
  # - DB_PORT
  # - DB_NAME
  # - SMTP_HOST
  # - SMTP_PORT
  # - SMTP_USER
  # - SMTP_PASSWORD
  # - EMAILS_FROM_EMAIL
  # - SECRET_KEY
  # - API_BASE_URL